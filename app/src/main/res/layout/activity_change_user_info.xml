<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeUserInfo"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/changeExplain"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Enter New Password"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:background="@color/teal_200"
            android:layout_weight="5"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Change"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_weight="5"
            android:onClick="changePass"

        />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="30dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <EditText
            android:id="@+id/newHeight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Enter Your New Heigh"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:background="@color/teal_200"
            android:layout_weight="5"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Change"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_weight="5"
            android:onClick="changeHeight"

            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="30dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <EditText
            android:id="@+id/newWeight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Enter Your New Weight "
            android:textSize="30dp"
            android:textColor="@color/black"
            android:background="@color/teal_200"
            android:layout_weight="5"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Change"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_weight="5"
            android:onClick="changeWeight"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/BackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_gravity="left"
        android:text="Back To \n Main Page"
        android:textSize="30dp"
        android:onClick="backToMain"
        />

</LinearLayout>